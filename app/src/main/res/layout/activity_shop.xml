<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".Shop">

    <ImageView
        android:id="@+id/mapss"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="400dp"
        android:src="@drawable/mapss"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="212dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Delivery Service"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/alamat"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pilih Alamat Pengantar"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="32dp" />

    <ScrollView
        android:layout_below="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/roti1"
                    android:layout_width="96dp"
                    android:layout_height="193dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/roti1"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:id="@+id/frametxt"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@id/roti1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/namaroti1"
                        android:layout_width="200dp"
                        android:layout_height="33dp"
                        android:text="Cheese On Boat"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="RP. 13.000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/kranjang"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/keranjang"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item2"
                android:layout_below="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/roti22"
                    android:layout_width="96dp"
                    android:layout_height="193dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/roti2"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:id="@+id/frametxt2"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@id/roti22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/namaroti2"
                        android:layout_width="200dp"
                        android:layout_height="33dp"
                        android:text="Croissant Bread"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="RP. 12.000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/kranjang2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/keranjang"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/item3"
                android:layout_below="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/roti3"
                    android:layout_width="96dp"
                    android:layout_height="193dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/roti3"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:id="@+id/frametxt3"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@id/roti3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/namaroti3"
                        android:layout_width="200dp"
                        android:layout_height="33dp"
                        android:text="Croissant Bread"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="RP. 12.000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/kranjang3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/keranjang"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"/>
            </RelativeLayout>
            <Button
                android:id="@+id/cekot"
                android:layout_below="@+id/item3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A7C5A"
                android:text="Checkout"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>