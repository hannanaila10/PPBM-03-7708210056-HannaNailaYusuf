<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".Login">


    <ImageView
        android:id="@+id/bakery"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="50dp"
        android:src="@drawable/bakery"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome To The Bakery Shop"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="32dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/bakery"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:background="#E0E0E0"
        android:backgroundTint="#E0E0E0"
        android:gravity="center"
        android:hint="Username"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="500dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/username"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="#E0E0E0"
        android:gravity="center"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/LOGIN"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/pass"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#9A7C5A"
        android:gravity="center"
        android:hint="Login"
        android:textColorHint="@color/white"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/registrasi"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/LOGIN"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#9A7C5A"
        android:gravity="center"
        android:text="Register"
        android:textColorHint="@color/white"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_below="@+id/registrasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/facebook"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/google"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:src="@drawable/google"
            android:layout_weight="1"/>

    </LinearLayout>



</RelativeLayout>