<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/panah"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="MY PROFILE"
        android:layout_marginTop="24dp"
        android:textSize="23sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_below="@+id/titel"
        android:layout_width="3400dp"
        android:layout_height="190dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="400dp"
        android:src="@drawable/orang"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="212dp"/>

    <ScrollView
        android:layout_below="@+id/profile"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/about"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#A57135"
                android:gravity="center"
                android:text="About"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="25dp"/>
            <EditText
                android:id="@+id/username"
                android:layout_below="@+id/about"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="30dp"
                android:background="#A57135"
                android:gravity="center"
                android:hint="Username"
                android:padding="10dp"
                android:textColorHint="@color/black"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_below="@id/username"
                android:layout_marginStart="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="50dp"

                android:background="#A57135"
                android:gravity="center"
                android:hint="Email"
                android:padding="10dp"
                android:textColorHint="@color/black"
                android:textSize="25dp" />


            <RadioGroup
                android:id="@+id/Gender"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="50dp"
                android:gravity="center"
                android:hint="Gender"
                android:padding="10dp"
                android:textColorHint="@color/black"
                android:textSize="25dp">
                <RadioButton
                    android:id="@+id/radio_button_1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Male"/>
                <RadioButton
                    android:id="@+id/radio_button_2"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Female"/>
            </RadioGroup>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Gender"
                android:backgroundTint="#A57135"
                android:outlineAmbientShadowColor="@color/black"/>

            <EditText
                android:id="@+id/No.Hanphone"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_below="@id/spinner"
                android:layout_marginStart="50dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="30dp"
                android:background="#A57135"
                android:gravity="center"
                android:hint="No.Handphone"
                android:padding="10dp"
                android:textColorHint="@color/black"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/notification"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="380dp"
                android:layout_marginRight="400dp"
                android:src="@drawable/notification"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="212dp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>