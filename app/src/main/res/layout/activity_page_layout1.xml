<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:padding="24dp">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="60dp"
        android:src="@drawable/foto"
        app:layout_anchorGravity="left" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, I'm Hanna Naila Yusuf, my NIM is 7708210056. I'm currently studying at Telkom University and I'm now in my 5th semester. And now I'm making assignments for the Programming course."
        android:textStyle="bold"
        android:textSize="18dp"
        android:justificationMode="inter_word"
        android:layout_marginTop="330dp"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate My Work"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt"/>

    <RatingBar
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"/>
</RelativeLayout>